<%= erb :'front_end/header' %>

<% if !session[:logged_in] %>
  <main class="error">
    <div id="info_div">
      <table>
        <tr>
          <td id="info">
            <img src="/images/icon/info.svg" alt="Small info icon" height="auto" width="20">
          </td>

          <td id="info_text">
            <p>You must sign in to view your special offers.</p>
          </td>
        </tr>
      </table>
    </div>
    <div id="signin_button">
      <a href="/login" class="btn btn-social btn-twitter"><span class="fa fa-twitter"></span> Sign
        in with Twitter</a>
    </div>
    <div id="misc_button">
      <a href="/index">GO TO HOMEPAGE</a>
      <a href="/contact">REPORT A PROBLEM</a>
    </div>
  </main>
<% elsif session[:logged_in] %>
  <main>
    <p class="title text-center">My Special Offers</p>
    <hr>

    <div class="container table-responsive">
      <table id="special_offers" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
        <thead>
        <tr>
          <th>Code</th>
          <th>Description</th>
        </tr>
        </thead>

        <% @special_offers.each do |id| %>
          <tr>
            <td class="code">
              <%= h get_special_offer_code(id) %>
            </td>

            <td class="description">
              <%= h get_special_offer_description(id) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </main>
<% end %>

<%= erb :'front_end/footer' %>
